#!/bin/dash

mkdir -p "$run"/chrome/cache
mkdir -p "$run"/chrome/user

touch "$run"/chrome/user/"First Run"

exec /opt/google/chrome-beta/google-chrome-beta \
   --disk-cache-dir="$run"/chrome/cache \
   --user-data-dir="$run"/chrome/user \
   --enable-potentially-annoying-security-features \
   --disable-sync \
   --enable-quic \
   --google-base-url=https://privatelee.com/ \
   --enable-features=OverlayScrollbar \
   --user-agent="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.113 Safari/537.36" \
   --show-cert-link \
   --no-referrers \
   "$@"
